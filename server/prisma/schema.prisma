datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  isAdmin   Boolean?
  lastName  String?
  orders    Order[]
  password  String
  reviews   Review[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Category {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String
  products  Product[]
  updatedAt DateTime  @updatedAt
}

model Product {
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    String
  colors        Json
  createdAt     DateTime @default(now())
  description   Json
  discountPrice Float
  id            String   @id @default(cuid())
  images        Json
  order         Order[]
  reviews       Review[]
  salePrice     Float
  title         String
  updatedAt     DateTime @updatedAt
  variants      Json
}

model Review {
  createdAt   DateTime @default(now())
  description String
  id          String   @id @default(cuid())
  product     Product? @relation(fields: [productId], references: [id])
  productId   String?
  rating      Int
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Order {
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  paymentIntent String
  paymentStatus Boolean?
  price         Float
  products      Product[]
  status        Json
  updatedAt     DateTime  @updatedAt
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?
}
